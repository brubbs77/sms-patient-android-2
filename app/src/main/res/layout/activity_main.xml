<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <!-- Header -->


    <!-- CSV Loading Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <Button
            android:id="@+id/loadCsvButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“ Charger CSV"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <TextView
            android:id="@+id/patientCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Patients: 0"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search patients..." />


    <!-- Selection Buttons -->

    <Spinner
        android:id="@+id/templateSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message Ã  envoyer..."
        android:inputType="textMultiLine"
        android:maxLength="160"
        android:maxLines="5"
        android:minLines="3" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="160">

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Search Bar -->


    <Button
        android:id="@+id/sendButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:padding="12dp"
        android:text="ðŸ“¤ Envoyer SMS"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/selectAllButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="âœ… Tout sÃ©lectionner"
            style="@style/Widget.Material3.Button.TonalButton"
            android:textSize="12sp" />

        <Button
            android:id="@+id/deselectAllButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="âŒ Tout dÃ©sÃ©lectionner"
            style="@style/Widget.Material3.Button.TonalButton"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Patient List -->

    <!-- Message Section -->

    <ListView
        android:id="@+id/patientListView"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        android:padding="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Template Spinner -->

        <!-- Message Input -->

        <!-- Send Button -->

    </LinearLayout>

</LinearLayout>